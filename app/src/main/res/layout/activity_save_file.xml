<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="415dp"
        android:layout_height="162dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="390dp"
            android:layout_height="146dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:src="@drawable/image05" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/videoView"
        android:layout_width="417dp"
        android:layout_height="155dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mic"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="265dp"
        android:layout_height="42dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="232dp"
        android:width="300dp"
        android:text="Choose a Device :"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:flow_verticalAlign="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout" />

    <Spinner
        android:id="@+id/audioDeviceSpinner"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="224dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/spinner_border"
        app:layout_constraintTop_toBottomOf="@+id/topLayout" />

    <TextView
        android:id="@+id/para"
        android:layout_width="382dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="316dp"
        android:width="300dp"
        android:fontFamily="@font/senvariablefontwght"
        android:lineSpacingExtra="2dp"
        android:text="Once the file is transfered to the PC, you will recieve the corrected audio through the connected devices"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:flow_verticalAlign="center"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topLayout" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:width="300dp"
        android:text="Calibrate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audioDeviceSpinner" />


</androidx.constraintlayout.widget.ConstraintLayout>